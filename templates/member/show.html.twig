{% extends 'base.html.twig' %}

{% block title %}Member{% endblock %}

{% block body %}
<div class="container" style="margin-top:100px;">
    <h3>Member</h3>

    <table class="table">
        <tbody>
            <tr>
                <th>Username</th>
                <td>{{ member.username }}</td>
            </tr>
            <tr>
                <th>First name</th>
                <td>{{ member.firstname }}</td>
            </tr>
            <tr>
                <th>Last name</th>
                <td>{{ member.lastname }}</td>
            </tr>
            <tr>
                <th>Date of Birth</th>
                <td>{{ member.dateofbirth }}</td>
            </tr>
            <tr>
                <th>Street</th>
                <td>{{ member.street }}</td>
            </tr>
            <tr>
                <th>Place</th>
                <td>{{ member.place }}</td>
            </tr>
            <tr>
                <th>Preprovision</th>
                <td>{{ member.preprovision }}</td>
            </tr>
        </tbody>
    </table>
</div>

<div class="container">
    <div class="row" style="margin-top:40px;">
        <a href="{{ path('member_edit', {'id': member.id}) }}" class="btn btn-success" style="padding-right: 44px;">Edit</a>

        {{ include('member/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}