<form method="post" action="{{ path('les_delete', {'id': les.id}) }}" onsubmit="return confirm('Are you sure you want to delete this les?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ les.id) }}">
    <button class="btn btn-danger" style="padding-left:30px;">Delete</button>
</form>
