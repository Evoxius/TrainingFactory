<form method="post" action="{{ path('training_delete', {'id': training.id}) }}" onsubmit="return confirm('Are you sure you want to delete this training?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ training.id) }}">
    <button class="btn btn-danger" style="padding-left:30px;">Delete</button>
</form>
