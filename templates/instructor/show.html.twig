{% extends 'base.html.twig' %}

{% block title %}Instructor{% endblock %}

{% block body %}
    <h1>Instructor</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ instructor.id }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ instructor.username }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ instructor.password }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ instructor.roles ? instructor.roles|join(', ') : '' }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ instructor.firstname }}</td>
            </tr>
            <tr>
                <th>Preprovision</th>
                <td>{{ instructor.preprovision }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ instructor.lastname }}</td>
            </tr>
            <tr>
                <th>Dateofbirth</th>
                <td>{{ instructor.dateofbirth }}</td>
            </tr>
            <tr>
                <th>Hiring_date</th>
                <td>{{ instructor.hiringDate ? instructor.hiringDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Salary</th>
                <td>{{ instructor.salary }}</td>
            </tr>
            <tr>
                <th>Social_sec_number</th>
                <td>{{ instructor.socialSecNumber }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('instructor_index') }}">back to list</a>

    <a href="{{ path('instructor_edit', {'id': instructor.id}) }}">edit</a>

    {{ include('instructor/_delete_form.html.twig') }}
{% endblock %}
